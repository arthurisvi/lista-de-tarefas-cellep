<%- include('../common/header') %>

<%- include('../common/menu') %>

<main class="vw-100 vh-100 d-flex align-items-center justify-content-center main">
    
    <div class="container">
        <div class="row my-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <form id="myList">
                            <div class="form-group">
                                <input type="text" name="nome" id="nome" class="form-control" autocomplete="off" placeholder="Título da tarefa" required>
                            </div>
                            
                            <div class="form-group">
                                <textarea type="text" name="descricao" id="descricao" cols="30" rows="10" class="form-control" autocomplete="off" placeholder="Descrição" required></textarea>
                            </div>
                            
                            <!-- <button type="submit" class="btn btn-success btn-block" id="salvar-tarefa">Salvar</button> -->
                            <button type="submit" class="btn btn-success btn-block" id="salvar" onclick="salvarTarefa">Salvar</button>
                        </form>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="row">
                    <div class="col-sm-3 text-left">
                        <p><strong>Nome</strong></p>
                    </div>
                    
                    <div class="col-sm-6 text-left">
                        <p><strong>Descrição</strong></p>
                    </div>
                    
                    <div class="col-sm-3 text-right">
                        <p><strong>Excluir</strong></p>
                    </div>
                    
                </div>
                
                <hr>
                <div id="tarefas">
                    
                    <% tarefas.forEach(tarefa => { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    
                                    <div class="col-sm-3 text-left">
                                        <p>
                                            <%= tarefa.nome %>
                                        </p>
                                    </div>
                                    <div class="col-sm-7 text-left">
                                        <p>
                                            <%= tarefa.descricao.substring(0,50) %>
                                        </p>
                                    </div>
                                    <div class="col-sm-2 text-right">
                                        <a href="/minhastarefas/excluir?id=<%= tarefa.id_tarefa %>" class="btn btn-danger ml-5">X</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <%}) %>
                    </div>
                </div>
                
                
            </div>
            
        </div>
        
    </main>
    
